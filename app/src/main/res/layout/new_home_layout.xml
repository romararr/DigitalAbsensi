                <!--                        android:layout_width="50dp"-->
                <!--                        android:layout_height="50dp"-->
                <!--                        android:layout_gravity="center"-->
                <!--                        android:layout_margin="10dp"-->
                <!--                        android:src="@drawable/file_text" />-->

                <!--                </LinearLayout>-->

            </LinearLayout>
            <!-- Verify End-->

        </LinearLayout>
        <!-- Content End-->

    </LinearLayout>

</ScrollView>